{
  "name": "gclaude-enterprise-management-system",
  "version": "2.0.0",
  "description": "GClaude Enterprise Management System - 企業級管理系統",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:simple": "node simple-server.js",
    "start:complete": "node enterprise-server.js",
    "dev": "NODE_ENV=development node server.js",
    "build": "echo 'No build step required'",
    "test": "node test-server.js",
    "deploy:gclaude": "node scripts/gclaude-deploy.js",
    "deploy:test": "node scripts/test-deployment.js",
    "browser:verify": "node scripts/intelligent-browser-verification.js",
    "browser:deep": "node scripts/deep-browser-verification.js",
    "system:health": "node scripts/system-health-check.js",
    "security:check": "node scripts/security-scan.js",
    "performance:optimize": "node scripts/performance-optimizer.js",
    "flight:report": "node scripts/telegram-flight-reporter.js",
    "db:setup": "node database.js",
    "install:deps": "npm install",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:performance": "node tests/performance/lighthouse-test.js",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "prod": "NODE_ENV=production node server.js",
    "deploy:render": "echo \"Deploying to Render...\" && npm run prod",
    "deploy:railway": "echo \"Deploying to Railway...\" && npm run prod",
    "deploy:vercel": "echo \"Deploying to Vercel...\" && npm run prod",
    "health-check": "curl -f http://localhost:$PORT/health || exit 1"
  },
  "keywords": [
    "enterprise",
    "management",
    "nodejs",
    "express",
    "system"
  ],
  "author": "Claude Code AI System",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.2",
    "node-fetch": "^3.3.2",
    "sequelize": "^6.32.1",
    "sharp": "^0.32.4",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.7",
    "telegraf": "^4.13.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "eslint": "^8.44.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "puppeteer": "^21.0.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "gclaude": {
    "compatible": true,
    "version": "2.0",
    "features": [
      "intelligent-deployment",
      "browser-automation",
      "telegram-integration",
      "multi-role-authentication",
      "real-time-monitoring",
      "performance-optimization"
    ],
    "deployment": {
      "platforms": [
        "railway",
        "render",
        "vercel",
        "gcp"
      ],
      "autoScale": true,
      "healthCheck": "/api/health",
      "monitoring": true
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/tests/**"
    ],
    "coverageDirectory": "test-results/coverage",
    "coverageReporters": [
      "html",
      "text",
      "lcov"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/helpers/setup.js"
    ]
  },
  "homepage": "https://github.com/gclaude/enterprise-system"
}
{
  "name": "gclaude-enterprise-management-system",
  "version": "2.0.0",
  "description": "GClaude相容企業員工管理系統 - 強化版 (基於D:0809專案)",
  "main": "server.js",
  "scripts": {
    "start": "node enterprise-server.js",
    "start:simple": "node simple-server.js",
    "start:complete": "node enterprise-server.js",
    "dev": "nodemon enterprise-server.js",
    "build": "echo 'No build step required'",
    "test": "node test/system-test.js",
    "deploy:gclaude": "node scripts/gclaude-deploy.js",
    "deploy:test": "node scripts/test-deployment.js",
    "browser:verify": "node scripts/intelligent-browser-verification.js",
    "browser:deep": "node scripts/deep-browser-verification.js",
    "system:health": "node scripts/system-health-check.js",
    "security:check": "node scripts/security-scan.js",
    "performance:optimize": "node scripts/performance-optimizer.js",
    "flight:report": "node scripts/telegram-flight-reporter.js",
    "db:setup": "node database.js",
    "install:deps": "npm install"
  },
  "keywords": [
    "gclaude-compatible",
    "enterprise-management",
    "employee-system",
    "nodejs",
    "express",
    "intelligent-deployment",
    "telegram-integration",
    "browser-automation"
  ],
  "author": "Claude Code AI System",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^5.1.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "sequelize": "^6.32.1",
    "sharp": "^0.32.4",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.6",
    "telegraf": "^4.13.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "eslint": "^8.44.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "puppeteer": "^21.0.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "gclaude": {
    "compatible": true,
    "version": "2.0",
    "features": [
      "intelligent-deployment",
      "browser-automation",
      "telegram-integration",
      "multi-role-authentication",
      "real-time-monitoring",
      "performance-optimization"
    ],
    "deployment": {
      "platforms": [
        "railway",
        "render",
        "vercel",
        "gcp"
      ],
      "autoScale": true,
      "healthCheck": "/api/health",
      "monitoring": true
    }
  }
}

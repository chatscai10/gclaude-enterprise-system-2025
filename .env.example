# GClaude Enterprise Management System - Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3007
HOST=0.0.0.0

# Database Configuration  
DB_TYPE=sqlite
DB_PATH=./database/enterprise.db
DB_SYNC=true
DB_LOGGING=false

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=24h
SESSION_SECRET=your-session-secret-key-here

# CORS Settings
CORS_ORIGIN=*

# Telegram Integration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_GROUP_ID=your-telegram-group-id-here
TELEGRAM_ENABLED=false

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
EMAIL_ENABLED=false

# File Upload Settings
UPLOAD_MAX_SIZE=10MB
UPLOAD_PATH=./uploads

# Security Settings
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=1000
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# GClaude Integration Settings
GCLAUDE_COMPATIBLE=true
GCLAUDE_DEPLOYMENT_KEY=your-gclaude-deployment-key
GCLAUDE_MONITORING=true
GCLAUDE_AUTO_SCALE=true

# Performance Settings
COMPRESSION_ENABLED=true
STATIC_CACHE_MAX_AGE=86400
API_CACHE_TTL=300

# Monitoring & Analytics
HEALTH_CHECK_INTERVAL=30000
METRICS_COLLECTION=true
ERROR_TRACKING=true

# Development Settings (only for NODE_ENV=development)
DEBUG_MODE=false
MOCK_DATA=false
AUTO_SEED=true
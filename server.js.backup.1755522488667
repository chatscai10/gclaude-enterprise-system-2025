// ==================== å¼·åŒ–å¥åº·æª¢æŸ¥ ====================

// è©³ç´°å¥åº·æª¢æŸ¥ç«¯é»
app.get('/health', async (req, res) => {
    try {
        const healthStatus = {
            status: 'healthy',
            timestamp: new Date().toISOString(),
            uptime: process.uptime(),
            memory: process.memoryUsage(),
            version: '1.0.0',
            environment: process.env.NODE_ENV || 'production',
            checks: {}
        };
        
        // æª¢æŸ¥æ•¸æ“šåº«é€£æ¥
        try {
            await db.readTable('users');
            healthStatus.checks.database = 'ok';
        } catch (dbError) {
            healthStatus.checks.database = 'error';
            healthStatus.status = 'unhealthy';
        }
        
        // æª¢æŸ¥Telegramé€šçŸ¥æœå‹™
        try {
            healthStatus.checks.telegram = telegramNotifier ? 'ok' : 'warning';
        } catch (telegramError) {
            healthStatus.checks.telegram = 'error';
        }
        
        // æª¢æŸ¥æ’ç­ç³»çµ±æœå‹™
        try {
            healthStatus.checks.scheduleSystem = scheduleSystem ? 'ok' : 'warning';
        } catch (scheduleError) {
            healthStatus.checks.scheduleSystem = 'error';
        }
        
        const statusCode = healthStatus.status === 'healthy' ? 200 : 503;
        res.status(statusCode).json({
            success: healthStatus.status === 'healthy',
            data: healthStatus,
            message: `ç³»çµ±ç‹€æ…‹: ${healthStatus.status}`
        });
        
    } catch (error) {
        console.error('å¥åº·æª¢æŸ¥å¤±æ•—:', error);
        res.status(503).json({
            success: false,
            message: 'å¥åº·æª¢æŸ¥å¤±æ•—',
            error: error.message
        });
    }
});

// ç°¡å–®çš„å°±ç·’æª¢æŸ¥
app.get('/ready', (req, res) => {
    res.status(200).json({
        success: true,
        message: 'Service ready',
        timestamp: new Date().toISOString()
    });
});


    } catch (error) {
        console.error('å¥åº·æª¢æŸ¥å¤±æ•—:', error);
        res.status(500).json({
            success: false,
            message: 'å¥åº·æª¢æŸ¥å¤±æ•—: ' + error.message
        });
    }
});

// ==================== åº«å­˜çµ±è¨ˆAPI ====================

app.get('/api/inventory/stats', authenticateToken, async (req, res) => {
    try {
        const inventory = await db.readTable('inventory') || [];
        
        const stats = {
            totalItems: inventory.length,
            totalQuantity: inventory.reduce((sum, item) => sum + (item.quantity || 0), 0),
            categories: [...new Set(inventory.map(item => item.category || 'ä¸€èˆ¬'))],
            lowStockItems: inventory.filter(item => (item.quantity || 0) < 10).length
        };

        res.json({
            success: true,
            data: stats,
            message: 'åº«å­˜çµ±è¨ˆç²å–æˆåŠŸ'
        });
    } catch (error) {
        console.error('ç²å–åº«å­˜çµ±è¨ˆå¤±æ•—:', error);
        res.status(500).json({
            success: false,
            message: 'ç²å–åº«å­˜çµ±è¨ˆå¤±æ•—: ' + error.message
        });
    }
});

// ==================== ç®¡ç†å“¡API ====================

app.get('/api/admin/orders/all', authenticateToken, checkAdmin, async (req, res) => {

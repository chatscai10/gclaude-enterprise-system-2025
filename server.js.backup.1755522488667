const express = require('express');
const cors = require('cors');
const helmet = require('helmet');
const compression = require('compression');
const rateLimit = require('express-rate-limit');
const path = require('path');
const fs = require('fs');
const jwt = require('jsonwebtoken');
const multer = require('multer');
require('dotenv').config();

// ä½¿ç”¨JSONæª”æ¡ˆè³‡æ–™åº«è€ŒéSQLite
const DatabaseOperations = require('./database/json-database');

// Telegramé€šçŸ¥ç³»çµ±
const TelegramNotifier = require('./modules/telegram-notifier');

// å®šæ™‚ç•°å¸¸æª¢æ¸¬æœå‹™
const ScheduledAnomalyDetector = require('./services/scheduled-anomaly-detector');

// æ’ç­ç³»çµ±æœå‹™
const ScheduleSystem = require('./services/schedule-system');

const app = express();
const PORT = process.env.PORT || 4006;
const JWT_SECRET = process.env.JWT_SECRET || 'gclaude-enterprise-secret-key';


// ==================== é€£ç·šæ± å„ªåŒ– ====================

// è¨­ç½®é©ç•¶çš„Keep-Aliveåƒæ•¸
app.use((req, res, next) => {
    res.setHeader('Connection', 'keep-alive');
    res.setHeader('Keep-Alive', 'timeout=5, max=1000');
    next();
});

// è«‹æ±‚é »ç‡é™åˆ¶å¼·åŒ–
const enhancedRateLimit = rateLimit({
    windowMs: 15 * 60 * 1000, // 15åˆ†é˜
    max: process.env.NODE_ENV === 'production' ? 100 : 1000, // é™åˆ¶æ¯IPè«‹æ±‚æ•¸
    message: {
        success: false,
        message: 'è«‹æ±‚éæ–¼é »ç¹ï¼Œè«‹ç¨å¾Œå†è©¦',
        retryAfter: '15åˆ†é˜'
    },
    standardHeaders: true,
    legacyHeaders: false,
    skip: (req) => {
        // è·³éå¥åº·æª¢æŸ¥å’Œç³»çµ±ç‹€æ…‹è«‹æ±‚
        return req.path === '/health' || req.path === '/api/system/status';
    }
});

app.use('connection-pool-optimization', enhancedRateLimit);


// ==================== APIå›æ‡‰å„ªåŒ– ====================

// çµ±ä¸€å›æ‡‰æ ¼å¼åŒ–ä¸­é–“ä»¶
app.use('response-optimization', (req, res, next) => {
    // å„ªåŒ–çš„JSONå›æ‡‰å‡½æ•¸
    const originalJson = res.json;
    res.json = function(data) {
        // æ·»åŠ çµ±ä¸€çš„å›æ‡‰é ­
        this.setHeader('Content-Type', 'application/json; charset=utf-8');
        this.setHeader('X-Response-Time', Date.now() - req.startTime);
        
        // æ¨™æº–åŒ–å›æ‡‰æ ¼å¼
        if (data && typeof data === 'object' && !data.hasOwnProperty('success')) {
            data = {
                success: true,
                data: data,
                timestamp: new Date().toISOString(),
                requestId: req.id
            };
        }
        
        return originalJson.call(this, data);
    };
    
    // è¨˜éŒ„è«‹æ±‚é–‹å§‹æ™‚é–“
    req.startTime = Date.now();
    next();
});

// APIå›æ‡‰æ™‚é–“ç›£æ§
app.use((req, res, next) => {
    res.on('finish', () => {
        const responseTime = Date.now() - req.startTime;
        
        // è¨˜éŒ„æ…¢è«‹æ±‚
        if (responseTime > 2000) {
            console.warn(`æ…¢è«‹æ±‚æª¢æ¸¬: ${req.method} ${req.path} è€—æ™‚ ${responseTime}ms`);
        }
        
        // è¨˜éŒ„APIä½¿ç”¨çµ±è¨ˆ
        if (req.path.startsWith('/api/')) {
            console.log(`APIèª¿ç”¨: ${req.method} ${req.path} - ${res.statusCode} (${responseTime}ms)`);
        }
    });
    next();
});

// åˆå§‹åŒ–è³‡æ–™åº«å’Œé€šçŸ¥ç³»çµ±
const db = new DatabaseOperations();

// ==================== æ•¸æ“šåº«æŸ¥è©¢å„ªåŒ– ====================

// æŸ¥è©¢çµæœå¿«å–
const queryCache = new Map();
const CACHE_TTL = 5 * 60 * 1000; // 5åˆ†é˜

// å„ªåŒ–çš„æ•¸æ“šåº«æŸ¥è©¢å‡½æ•¸
async function optimizedQuery(tableName, useCache = true) {
    const cacheKey = `query_${tableName}_${Date.now()}`;
    
    // æª¢æŸ¥å¿«å–
    if (useCache && queryCache.has(tableName)) {
        const cached = queryCache.get(tableName);
        if (Date.now() - cached.timestamp < CACHE_TTL) {
            console.log(`å¿«å–å‘½ä¸­: ${tableName}`);
            return cached.data;
        }
    }
    
    // åŸ·è¡ŒæŸ¥è©¢
    const startTime = Date.now();
    const data = await db.readTable(tableName);
    const queryTime = Date.now() - startTime;
    
    // è¨˜éŒ„æ…¢æŸ¥è©¢
    if (queryTime > 1000) {
        console.warn(`æ…¢æŸ¥è©¢æª¢æ¸¬: ${tableName} è€—æ™‚ ${queryTime}ms`);
    }
    
    // æ›´æ–°å¿«å–
    if (useCache) {
        queryCache.set(tableName, {
            data,
            timestamp: Date.now()
        });
        
        // æ¸…ç†éæœŸå¿«å–
        setTimeout(() => {
            queryCache.delete(tableName);
        }, CACHE_TTL);
    }
    
    return data;
}

// æ‰¹æ¬¡æŸ¥è©¢å„ªåŒ–
async function batchQuery(tableNames) {
    return Promise.all(
        tableNames.map(tableName => optimizedQuery(tableName))
    );
}

const telegramNotifier = new TelegramNotifier();

// åˆå§‹åŒ–å®šæ™‚ç•°å¸¸æª¢æ¸¬æœå‹™
const anomalyDetector = new ScheduledAnomalyDetector();

// åˆå§‹åŒ–æ’ç­ç³»çµ±æœå‹™
const scheduleSystem = new ScheduleSystem();

// é…ç½®multerç”¨æ–¼æª”æ¡ˆä¸Šå‚³
const storage = multer.memoryStorage(); // ä½¿ç”¨è¨˜æ†¶é«”å­˜å„²ï¼Œé›²ç«¯ç’°å¢ƒå‹å¥½
const upload = multer({
    storage: storage,
    limits: {
        fileSize: 5 * 1024 * 1024, // 5MBé™åˆ¶
        files: 5 // æœ€å¤š5å€‹æª”æ¡ˆ
    },
    fileFilter: (req, file, cb) => {
        // åªå…è¨±åœ–ç‰‡æª”æ¡ˆ
        if (file.mimetype.startsWith('image/')) {
            cb(null, true);
        } else {
            cb(new Error('åªèƒ½ä¸Šå‚³åœ–ç‰‡æª”æ¡ˆ'), false);
        }
    }
});

// ==================== ä¸­é–“ä»¶è¨­å®š ====================

// å®‰å…¨è¨­å®š

// ==================== é€²éšå›æ‡‰å£“ç¸® ====================

// è¨­ç½®é€²éšå£“ç¸®é¸é …
app.use('advanced-compression', compression({
    level: 6, // å£“ç¸®ç´šåˆ¥ (1-9)
    threshold: 1024, // åªå£“ç¸®å¤§æ–¼1KBçš„å›æ‡‰
    filter: (req, res) => {
        // ä¸å£“ç¸®å·²ç¶“å£“ç¸®çš„å…§å®¹
        if (req.headers['x-no-compression']) {
            return false;
        }
        
        // åªå£“ç¸®å¯å£“ç¸®çš„å…§å®¹é¡å‹
        const contentType = res.getHeader('content-type');
        return contentType && (
            contentType.includes('text/') ||
            contentType.includes('application/json') ||
            contentType.includes('application/javascript') ||
            contentType.includes('application/xml')
        );
    }
}));

// è¨­ç½®å¿«å–é ­
app.use((req, res, next) => {
    // éœæ…‹è³‡æºå¿«å–
    if (req.path.match(/\.(css|js|png|jpg|jpeg|gif|ico|svg)$/)) {
        res.setHeader('Cache-Control', 'public, max-age=31536000'); // 1å¹´
    } else if (req.path.startsWith('/api/')) {
        // APIå›æ‡‰ä¸å¿«å–æˆ–çŸ­æ™‚é–“å¿«å–
        if (req.path.includes('/stats') || req.path.includes('/status')) {
            res.setHeader('Cache-Control', 'public, max-age=300'); // 5åˆ†é˜
        } else {
            res.setHeader('Cache-Control', 'no-cache, no-store, must-revalidate');
        }
    }
    next();
});

app.use(helmet({
    contentSecurityPolicy: {
        directives: {
            defaultSrc: ["'self'"],
            scriptSrc: ["'self'", "'unsafe-inline'", "'unsafe-eval'", "https://cdn.jsdelivr.net", "https://cdnjs.cloudflare.com"],
            scriptSrcAttr: ["'unsafe-inline'"],
            styleSrc: ["'self'", "'unsafe-inline'", "https://cdn.jsdelivr.net", "https://cdnjs.cloudflare.com"],
            styleSrcElem: ["'self'", "'unsafe-inline'", "https://cdn.jsdelivr.net", "https://cdnjs.cloudflare.com"],
            imgSrc: ["'self'", "data:", "https:", "blob:"],
            connectSrc: ["'self'", "https://api.telegram.org"],
            fontSrc: ["'self'", "https://cdn.jsdelivr.net", "https://cdnjs.cloudflare.com"]
        }
    }
}));

// ä¿®å¾©ï¼šæ­£ç¢ºé…ç½®compressionä¸­é–“ä»¶
app.use(compression({
    filter: (req, res) => {
        // ä¸å£“ç¸®å·²ç¶“å£“ç¸®çš„å…§å®¹
        if (req.headers['x-no-compression']) {
            return false;
        }
        // ä½¿ç”¨compressionçš„é è¨­éæ¿¾å™¨
        return compression.filter(req, res);
    },
    threshold: 1024, // åªå£“ç¸®å¤§æ–¼1KBçš„å›æ‡‰
    level: 6 // å£“ç¸®ç­‰ç´š (1-9, 6æ˜¯å¹³è¡¡é»)
}));

// API é€Ÿç‡é™åˆ¶
const limiter = rateLimit({
    windowMs: 15 * 60 * 1000,
    max: 1000,
    message: {
        error: 'Too many requests',
        message: 'APIè«‹æ±‚éæ–¼é »ç¹ï¼Œè«‹ç¨å¾Œå†è©¦'
    }
});
app.use('/api/', limiter);

app.use(cors({
    origin: process.env.CORS_ORIGIN || '*',
    credentials: true,
    methods: ['GET', 'POST', 'PUT', 'DELETE', 'OPTIONS'],
    allowedHeaders: ['Content-Type', 'Authorization', 'X-Requested-With']
}));

app.use(express.json({ limit: '50mb' }));
app.use(express.urlencoded({ extended: true, limit: '50mb' }));

app.use(express.static(path.join(__dirname, 'public'), {
    maxAge: '1d',
    etag: true,
    lastModified: true
}));

// è«‹æ±‚æ—¥èªŒ
app.use((req, res, next) => {
    console.log(`${new Date().toISOString()} - ${req.method} ${req.url} - ${req.ip}`);
    next();
});

// ==================== JWT èªè­‰ä¸­é–“ä»¶ ====================


// å„ªåŒ–JWT tokenè™•ç†
const JWT_SECRET = process.env.JWT_SECRET || 'gclaude-enterprise-system-secret-key-2025';
const jwt = require('jsonwebtoken');

// æ”¹é€²çš„èº«ä»½é©—è­‰ä¸­é–“ä»¶
function authenticateToken(req, res, next) {
    const authHeader = req.headers['authorization'];
    const token = authHeader && authHeader.split(' ')[1];

    if (!token) {
        return res.status(401).json({
            success: false,
            message: 'ç¼ºå°‘æˆæ¬ŠToken',
            error: 'MISSING_TOKEN'
        });
    }

    jwt.verify(token, JWT_SECRET, (err, user) => {
        if (err) {
            console.error('Tokené©—è­‰å¤±æ•—:', err.message);
            return res.status(403).json({
                success: false,
                message: 'Tokenç„¡æ•ˆæˆ–å·²éæœŸ',
                error: 'INVALID_TOKEN'
            });
        }

        req.user = user;
        next();
    });
}



    if (!token) {
        return res.status(401).json({
            success: false,
            message: 'å­˜å–ä»¤ç‰Œç¼ºå¤±'
        });
    }

    jwt.verify(token, JWT_SECRET, (err, user) => {
        if (err) {
            return res.status(403).json({
                success: false,
                message: 'å­˜å–ä»¤ç‰Œç„¡æ•ˆæˆ–å·²éæœŸ'
            });
        }
        req.user = user;
        next();
    });
}


// æäº¤ç‡Ÿæ¥­é¡è¨˜éŒ„
app.post('/api/revenue/submit', authenticateToken, async (req, res) => {
    try {
        const {
            store_id,
            date,
            order_count,
            revenue_items,
            expense_items,
            bonus_type,
            notes
        } = req.body;

        // è¨ˆç®—ç¸½æ”¶å…¥å’Œç¸½æ”¯å‡º
        let total_revenue = 0;
        let total_expense = 0;

        if (revenue_items && Array.isArray(revenue_items)) {
            total_revenue = revenue_items.reduce((sum, item) => sum + (parseFloat(item.amount) || 0), 0);
        }

        if (expense_items && Array.isArray(expense_items)) {
            total_expense = expense_items.reduce((sum, item) => sum + (parseFloat(item.amount) || 0), 0);
        }

        // ä½¿ç”¨è³‡æ–™åº«çš„çé‡‘è¨ˆç®—é‚è¼¯
        const bonusCalculation = db.calculateBonusAmount({
            revenue_items: revenue_items || [],
            expense_items: expense_items || [],
            bonus_type: bonus_type || 'å¹³æ—¥çé‡‘',
            date: new Date(date)
        });

        // å‰µå»ºç‡Ÿæ¥­é¡è¨˜éŒ„
        const revenueData = {
            id: Date.now(),
            employee_id: req.user.employee_id,
            employee_name: req.user.name,
            store_id: store_id || req.user.store_id,
            store_name: req.user.store_name,
            date,
            order_count: order_count || 0,
            revenue_items: revenue_items || [],
            expense_items: expense_items || [],
            total_revenue,
            total_expense,
            bonus_type: bonus_type || 'å¹³æ—¥çé‡‘',
            bonus_amount: bonusCalculation.amount,
            bonus_reason: bonusCalculation.reason,
            adjusted_income: bonusCalculation.adjustedIncome,
            notes: notes || '',
            status: 'pending',
            created_at: new Date().toISOString(),
            updated_at: new Date().toISOString()
        };

        // ä¿å­˜åˆ°è³‡æ–™åº«
        const existingRevenue = await db.readTable('revenue');
        existingRevenue.push(revenueData);
        await db.writeTable('revenue', existingRevenue);

        // ç™¼é€Telegramé€šçŸ¥
        if (telegramNotifier) {
            try {
                await telegramNotifier.notifyRevenue(revenueData);
            } catch (telegramError) {
                console.error('Telegramé€šçŸ¥å¤±æ•—:', telegramError);
            }
        }

        res.json({
            success: true,
            data: revenueData,
            message: 'ç‡Ÿæ¥­é¡æäº¤æˆåŠŸ',
            bonus_calculation: bonusCalculation
        });
    } catch (error) {
        console.error('ç‡Ÿæ¥­é¡æäº¤å¤±æ•—:', error);
        res.status(500).json({
            success: false,
            message: 'ç‡Ÿæ¥­é¡æäº¤å¤±æ•—: ' + error.message
        });
    }
});


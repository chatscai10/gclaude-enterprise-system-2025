// å…¨åŸŸéŒ¯èª¤è™•ç†ä¸­é–“ä»¶
app.use('comprehensive-error-handler', (error, req, res, next) => {
    // è¨˜éŒ„éŒ¯èª¤è©³æƒ…
    const errorInfo = {
        timestamp: new Date().toISOString(),
        method: req.method,
        path: req.path,
        error: error.message,
        stack: process.env.NODE_ENV === 'development' ? error.stack : undefined,
        userAgent: req.get('User-Agent'),
        ip: req.ip
    };
    
    console.error('ç³»çµ±éŒ¯èª¤:', JSON.stringify(errorInfo, null, 2));
    
    // ç™¼é€TelegraméŒ¯èª¤é€šçŸ¥ (åš´é‡éŒ¯èª¤)
    if (error.status >= 500) {
        try {
            telegramNotifier.sendErrorNotification(errorInfo);
        } catch (notifyError) {
            console.error('Telegramé€šçŸ¥ç™¼é€å¤±æ•—:', notifyError.message);
        }
    }
    
    // æ ¹æ“šéŒ¯èª¤é¡å‹è¿”å›é©ç•¶å›æ‡‰
    const statusCode = error.status || 500;
    const message = statusCode >= 500 ? 
        'ä¼ºæœå™¨å…§éƒ¨éŒ¯èª¤ï¼Œè«‹ç¨å¾Œå†è©¦' : 
        error.message || 'è«‹æ±‚è™•ç†å¤±æ•—';
    
    res.status(statusCode).json({
        success: false,
        message,
        timestamp: new Date().toISOString(),
        requestId: req.id || Math.random().toString(36).substring(7)
    });
});

// è«‹æ±‚IDä¸­é–“ä»¶ (ç”¨æ–¼éŒ¯èª¤è¿½è¹¤)
app.use((req, res, next) => {
    req.id = Math.random().toString(36).substring(7);
    res.setHeader('X-Request-ID', req.id);
    next();
});

// è«‹æ±‚è¶…æ™‚è™•ç†
app.use((req, res, next) => {
    res.setTimeout(30000, () => {
        console.error('è«‹æ±‚è¶…æ™‚:', {
            method: req.method,
            path: req.path,
            timestamp: new Date().toISOString()
        });
        
        if (!res.headersSent) {
            res.status(408).json({
                success: false,
                message: 'è«‹æ±‚è¶…æ™‚',
                timestamp: new Date().toISOString()
            });
        }
    });
    next();
});

// ==================== éŒ¯èª¤è™•ç† ====================

app.use('*', (req, res) => {
    res.status(404).json({
        success: false,
        error: "Route not found",
        path: req.originalUrl,
        message: "è«‹æ±‚çš„è³‡æºä¸å­˜åœ¨"
    });
});

app.use((error, req, res, next) => {
    console.error('Server Error:', error);
    res.status(error.status || 500).json({
        success: false,
        message: error.message || 'Internal server error',
        timestamp: new Date().toISOString()
    });
});

// ==================== ä¼ºæœå™¨å•Ÿå‹• ====================

app.listen(PORT, '0.0.0.0', () => {
    console.log(`ğŸš€ GClaude Enterprise System (Cloud Version) started on port ${PORT}`);
    console.log(`ğŸŒ Server URL: http://0.0.0.0:${PORT}`);
    console.log(`ğŸ“Š Environment: ${process.env.NODE_ENV || 'production'}`);
    console.log(`ğŸ—„ï¸ Database: JSON File Database (Cloud Compatible)`);
    console.log(`ğŸ”§ Telegram Bot: ${process.env.TELEGRAM_BOT_TOKEN ? 'å·²è¨­å®š' : 'æœªè¨­å®š'}`);
    
    // å•Ÿå‹•å®šæ™‚ç•°å¸¸æª¢æ¸¬æœå‹™
    try {
        anomalyDetector.start();
        console.log(`ğŸ“ å®šæ™‚ç•°å¸¸æª¢æ¸¬æœå‹™å·²å•Ÿå‹•`);
    } catch (error) {
        console.error(`âŒ å®šæ™‚ç•°å¸¸æª¢æ¸¬æœå‹™å•Ÿå‹•å¤±æ•—:`, error.message);
    }
    
    console.log(`âœ… All systems operational - Cloud deployment ready!`);
});

// å„ªé›…é—œé–‰
process.on('SIGTERM', async () => {
    console.log('SIGTERM received, shutting down gracefully...');
    try {
        await anomalyDetector.stop();
        console.log('Anomaly detector stopped');
    } catch (error) {
        console.error('Error stopping anomaly detector:', error);
    }
    
    db.close();
    process.exit(0);
});

process.on('SIGINT', async () => {
    console.log('SIGINT received, shutting down gracefully...');
    try {
        await anomalyDetector.stop();
        console.log('Anomaly detector stopped');  
    } catch (error) {
        console.error('Error stopping anomaly detector:', error);
    }
    
    db.close();
    process.exit(0);
});

module.exports = app;

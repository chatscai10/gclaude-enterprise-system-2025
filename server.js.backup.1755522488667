        res.json({
            success: true,
            data: orders,
            message: 'æ‰€æœ‰å«è²¨è¨˜éŒ„ç²å–æˆåŠŸ'
        });
    } catch (error) {
        console.error('ç²å–æ‰€æœ‰å«è²¨è¨˜éŒ„å¤±æ•—:', error);
        res.status(500).json({
            success: false,
            message: 'ç²å–æ‰€æœ‰å«è²¨è¨˜éŒ„å¤±æ•—: ' + error.message
        });
    }
});




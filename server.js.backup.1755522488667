// ç‡Ÿæ¥­é¡å¯©æ ¸ (ç®¡ç†å“¡)
app.post('/api/admin/revenue/:id/review', authenticateToken, requireAdmin, async (req, res) => {
    try {
        const { id } = req.params;
        const { action, reason } = req.body;
        
        const records = await db.readTable('revenue');
        const recordIndex = records.findIndex(r => r.id == id);
        
        if (recordIndex === -1) {
            return res.status(404).json({
                success: false,
                message: 'ç‡Ÿæ¥­é¡è¨˜éŒ„ä¸å­˜åœ¨'
            });
        }
        
        records[recordIndex].status = action === 'approve' ? 'approved' : 'rejected';
        records[recordIndex].review_reason = reason || '';
        records[recordIndex].reviewed_by = req.user.id;
        records[recordIndex].reviewed_at = new Date().toISOString();
        
        await db.writeTable('revenue', records);
        
        // ç™¼é€å¯©æ ¸é€šçŸ¥
        if (telegramNotifier) {
            try {
                await telegramNotifier.notifyRevenueApproval({
                    revenue_id: id,
                    employee_name: records[recordIndex].employee_name,
                    action,
                    reason,
                    reviewer: req.user.name
                });
            } catch (telegramError) {
                console.error('Telegramå¯©æ ¸é€šçŸ¥å¤±æ•—:', telegramError);
            }
        }
        
        res.json({
            success: true,
            message: `ç‡Ÿæ¥­é¡è¨˜éŒ„å·²${action === 'approve' ? 'æ ¸å‡†' : 'æ‹’çµ•'}`
        });
    } catch (error) {
        res.status(500).json({
            success: false,
            message: 'ç‡Ÿæ¥­é¡å¯©æ ¸å¤±æ•—'
        });
    }
});

// ==================== å«è²¨ç®¡ç†API ====================

// æäº¤å«è²¨è¨˜éŒ„
app.post('/api/orders/submit', authenticateToken, async (req, res) => {
    try {
        const {
            store_id,
            delivery_date,
            items,
            notes
        } = req.body;

        // é–‹å§‹è³‡æ–™åº«äº‹å‹™è™•ç†
        console.log('é–‹å§‹å«è²¨æäº¤äº‹å‹™è™•ç†...');
        
        // æª¢æŸ¥åº«å­˜å……è¶³æ€§
        const inventoryCheckResults = [];
        const inventory = await db.readTable('inventory') || [];
        
        for (const item of items || []) {
            const productName = item.product_name;
            const requestedQuantity = parseInt(item.quantity) || 0;
            
            // æ‰¾åˆ°å°æ‡‰çš„åº«å­˜è¨˜éŒ„
            const inventoryItem = inventory.find(inv => 
                inv.product_name === productName || 
                inv.name === productName
            );
            
            if (!inventoryItem) {
                return res.status(400).json({
                    success: false,
                    message: `å•†å“ "${productName}" ä¸å­˜åœ¨æ–¼åº«å­˜ä¸­`
                });
            }
            
            const availableQuantity = parseInt(inventoryItem.quantity) || 0;
            
            if (requestedQuantity > availableQuantity) {
                return res.status(400).json({
                    success: false,
                    message: `å•†å“ "${productName}" åº«å­˜ä¸è¶³ï¼šéœ€è¦ ${requestedQuantity}ï¼Œå¯ç”¨ ${availableQuantity}`
                });
            }
            
            inventoryCheckResults.push({
                item: inventoryItem,
                requestedQuantity,
                availableQuantity
            });
        }

        // åº«å­˜æª¢æŸ¥é€šéï¼ŒåŸ·è¡Œåº«å­˜æ‰£æ¸›
        for (const result of inventoryCheckResults) {
            const { item, requestedQuantity } = result;
            const newQuantity = item.quantity - requestedQuantity;
            
            // æ›´æ–°åº«å­˜æ•¸é‡
            const inventoryIndex = inventory.findIndex(inv => inv.id === item.id);
            if (inventoryIndex !== -1) {
                inventory[inventoryIndex] = {
                    ...inventory[inventoryIndex],
                    quantity: newQuantity,
                    updated_at: new Date().toISOString()
                };
            }
            
            // è¨˜éŒ„åº«å­˜ç•°å‹•
            const inventoryTransactions = await db.readTable('inventory_transactions') || [];
            inventoryTransactions.push({
                id: Date.now() + Math.random(),
                product_id: item.id,
                product_name: item.product_name || item.name,
                transaction_type: 'order_deduction',
                quantity: -requestedQuantity,
                before_quantity: item.quantity,
                after_quantity: newQuantity,
                reason: `å“¡å·¥å«è²¨æ‰£æ¸› (è¨‚å–®ID: ${Date.now()})`,
                performed_by: req.user.employee_id,
                performed_by_name: req.user.name,
                reference_no: `ORDER-${Date.now()}`,
                created_at: new Date().toISOString()
            });
            
            await db.writeTable('inventory_transactions', inventoryTransactions);
        }

        // æ›´æ–°åº«å­˜è¡¨
        await db.writeTable('inventory', inventory);

        // å‰µå»ºå«è²¨è¨˜éŒ„
        const orderData = {
            id: Date.now(),
            employee_id: req.user.employee_id,
            employee_name: req.user.name,
            store_id: store_id || req.user.store_id,
            store_name: req.user.store_name,
            delivery_date,
            items: items || [],
            notes: notes || '',
            status: 'approved', // è‡ªå‹•æ ¸å‡†å·²æ‰£æ¸›åº«å­˜çš„è¨‚å–®
            inventory_deducted: true,
            created_at: new Date().toISOString(),
            updated_at: new Date().toISOString()
        };

        // ä¿å­˜å«è²¨è¨˜éŒ„
        const existingOrders = await db.readTable('orders');
        existingOrders.push(orderData);
        await db.writeTable('orders', existingOrders);

        console.log('åº«å­˜æ‰£æ¸›å®Œæˆï¼Œå«è²¨è¨˜éŒ„å·²ä¿å­˜');

        // åˆ†æå«è²¨ç•°å¸¸
        const anomalies = await analyzeOrderingAnomalies(orderData, req.user.store_id);

        // ç™¼é€Telegramé€šçŸ¥
        if (telegramNotifier) {
            try {
                await telegramNotifier.notifyOrdering(orderData, anomalies);
            } catch (telegramError) {
                console.error('Telegramé€šçŸ¥å¤±æ•—:', telegramError);
            }
        }

        res.json({
            success: true,
            data: orderData,
            message: 'å«è²¨è¨˜éŒ„æäº¤æˆåŠŸï¼Œåº«å­˜å·²è‡ªå‹•æ‰£æ¸›',
            inventory_deducted: inventoryCheckResults.map(r => ({
                product: r.item.product_name || r.item.name,
                deducted: r.requestedQuantity,
                remaining: r.availableQuantity - r.requestedQuantity
            }))
        });
    } catch (error) {
        console.error('å«è²¨æäº¤å¤±æ•—:', error);
        res.status(500).json({
            success: false,
            message: 'å«è²¨æäº¤å¤±æ•—: ' + error.message
        });
    }
});


        res.json({
            success: true,
            data: {
                total: totalRevenue,
                records: teamRevenue,
                count: teamRevenue.length
            },
            message: 'åœ˜éšŠæ¥­ç¸¾çµ±è¨ˆç²å–æˆåŠŸ'
        });
    } catch (error) {
        res.status(500).json({
            success: false,
            message: 'ç²å–åœ˜éšŠæ¥­ç¸¾çµ±è¨ˆå¤±æ•—'
        });
    }

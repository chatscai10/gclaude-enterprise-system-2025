// ç®¡ç†å“¡ï¼šå¼·åˆ¶é–‹å•Ÿæ’ç­ç³»çµ±
app.post('/api/admin/schedule/force-open', authenticateToken, requireAdmin, async (req, res) => {
    try {
        const { duration_minutes } = req.body;
        const duration = duration_minutes || 30; // é è¨­30åˆ†é˜
        
        // å‰µå»ºå¼·åˆ¶é–‹å•Ÿè¨˜éŒ„
        const forceOpenRecord = {
            id: Date.now(),
            opened_by: req.user.id,
            opened_by_name: req.user.name,
            duration_minutes: duration,
            start_time: new Date().toISOString(),
            end_time: new Date(Date.now() + duration * 60 * 1000).toISOString(),
            status: 'active'
        };
        
        const forceOpenRecords = await db.readTable('schedule_force_open') || [];
        forceOpenRecords.push(forceOpenRecord);
        await db.writeTable('schedule_force_open', forceOpenRecords);
        
        // ç™¼é€Telegramé€šçŸ¥
        await telegramNotifier.sendBossNotification(
            `ğŸš¨ å¼·åˆ¶æ’ç­ç³»çµ±å·²é–‹å•Ÿ\nâ° é–‹æ”¾æ™‚é–“: ${duration}åˆ†é˜\nğŸ‘¤ é–‹å•Ÿè€…: ${req.user.name}\nğŸ“… é–‹å•Ÿæ™‚é–“: ${new Date().toLocaleString('zh-TW')}\nğŸ“… çµæŸæ™‚é–“: ${new Date(Date.now() + duration * 60 * 1000).toLocaleString('zh-TW')}`
        );
        
        await telegramNotifier.sendEmployeeNotification(
            `ğŸš¨ å¼·åˆ¶æ’ç­ç³»çµ±å·²é–‹å•Ÿï¼Œè«‹ç›¡å¿«å®Œæˆæ’ç­ï¼`
        );
        
        res.json({
            success: true,
            data: forceOpenRecord,
            message: `å¼·åˆ¶æ’ç­ç³»çµ±å·²é–‹å•Ÿ ${duration} åˆ†é˜`
        });
    } catch (error) {
        res.status(500).json({
            success: false,
            message: 'å¼·åˆ¶é–‹å•Ÿæ’ç­ç³»çµ±å¤±æ•—: ' + error.message
        });
    }
});


